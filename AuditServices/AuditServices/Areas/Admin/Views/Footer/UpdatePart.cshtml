@model FooterPartUpdateVM
@{
    ViewData["Title"] = "UpdatePart";
}

<!-- /.navbar -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2 justify-content-center">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Link hissələri</a></li>
                        <li class="breadcrumb-item active">Yenilə</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Yeniləmək formu</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form method="post" asp-action="UpdatePart">
                            <input asp-for="Id"type="hidden"value="@Model.Id"/>
                            <div class="card-body">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="form-group">
                                    <label asp-for="Title">Başlıq</label>
                                    <input type="text" asp-for="Title" class="form-control" value="@Model.Title" placeholder="Başlıq">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Order">Sıra</label>
                                    <input type="number" asp-for="Order" class="form-control" value="@Model.Order" placeholder="Sıra">
                                    <span asp-validation-for="Order" class="text-danger"></span>
                                </div>
                                @for(int i=0;i<Model.FooterPartLinks.Count; i++)
                                {
                                    <hr />
                                    <div class="form-group">
                                        <label asp-for="FooterPartLinks[i].Text">Text</label>
                                        <input type="text" asp-for="FooterPartLinks[i].Text" class="form-control" value="@Model.FooterPartLinks[i].Text" placeholder="Text">
                                        <span asp-validation-for="FooterPartLinks[i].Text" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="FooterPartLinks[i].Link">Link</label>
                                        <input type="text" asp-for="FooterPartLinks[i].Link" class="form-control" value="@Model.FooterPartLinks[i].Link" placeholder="Link">
                                        <span asp-validation-for="FooterPartLinks[i].Link" class="text-danger"></span>
                                    </div>
                                    <input asp-for="FooterPartLinks[i].Id" type="hidden" value="@Model.FooterPartLinks[i].Id" />
                                }
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Yenilə</button>
                                <a type="button" class="btn btn-danger" asp-action="Index">Ləğv et</a>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>
</div>
