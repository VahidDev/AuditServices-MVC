<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" id="myModal">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Saytın ayaq hissəsi</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Əsas səyfə</a></li>
                        <li class="breadcrumb-item active">Ayaq hissə</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Ayaq hissə</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Yotube link</th>
                                        <th>Linkedİn link</th>
                                        <th>Twitter link</th>
                                        <th>Instagram link</th>
                                        <th>Content</th>
                                    </tr>
                                </thead>
                                <tbody id="result">
                                    <tr>
                                        <td>@Model.YoutubeLink</td>
                                        <td>@Model.LinkedInLink</td>
                                        <td>@Model.TwitterLink</td>
                                        <td>@Model.InstagramLink</td>
                                        <td>@Model.Content</td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Update">Yenilə</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Xəbərlər hissəsi</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Başlıq</th>
                                        <th>Sıra</th>
                                        <th>Linklər</th>
                                    </tr>
                                </thead>
                                <tbody id="result">
                                    @foreach (var part in Model?.FooterParts)
                                    {
                                        <tr>
                                            <td>@part.Title</td>
                                            <td>@part.Order</td>
                                            <td>
                                                @foreach (FooterPartLinkVM link in part?.FooterPartLinks)
                                                {
                                                    <p>@link.Text</p>
                                                    <p>@link.Link</p>
                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-route-id="@part.Id" asp-action="UpdatePart">Yenilə</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

