<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" id="myModal">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Bloq haqqında ətraflı məlumat</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Blog" asp-action="Index">Bloqların siyahısı</a></li>
                        <li class="breadcrumb-item active">Bloq haqqında ətraflı məlumat</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Bloq</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Şəkil</th>
                                        <th>İstifadəçi</th>
                                        <th>Kontent</th>
                                    </tr>
                                </thead>
                                <tbody id="result">
                                    <tr class="userInfoEl">
                                        <td style="width: 40%;">
                                            <img src="~/assets/img/@Model.Image"
                                                 style="height:300px;object-fit:cover;"
                                                 alt="Blog shekli" class="d-block w-100" />
                                        </td>
                                        <td>@Model.User.UserName</td>
                                        <td><p style="overflow-y: auto; height: 300px;">@Model.Description</p></td>
                                        <td>
                                            <input type="hidden" value="@Model.Id" />
                                            <input type="hidden" value="@Model.User.UserName" />
                                            <!--Fake Button trigger modal -->
                                            <button type="button" id="blogModalBtn" class="btn btn-danger w-100 my-3">
                                                Sil
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                @if (Model.Comments?.Count == 0)
                {
                    <div class="col-12">
                        <h3 class="text-danger text-center">Bu bloq üçün heç bir rəy mövcud deyil</h3>
                    </div>
                }
                else
                {
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Rəylər</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example2" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>İstifadəçi</th>
                                            <th>Rəy</th>
                                        </tr>
                                    </thead>
                                    <tbody id="result">
                                        @foreach (var comment in Model.Comments)
                                        {
                                            <tr class="userInfoEl">
                                                <td>@comment.User.UserName</td>
                                                <td><p >@comment.Text</p></td>
                                                <td>
                                                    <input type="hidden" value="@comment.Id" />
                                                    <input type="hidden" value="@comment.User.UserName" />
                                                    <!--Fake Button trigger modal -->
                                                    <button type="button" class="btn btn-danger w-100 my-3 modalBtn">
                                                        Sil
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                }<!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!--Delete comment modal-->
<!-- Real Button trigger modal -->
<input type="hidden" id="modalActivate" data-bs-toggle="modal" data-bs-target="#exampleModal">
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">İstifadəçi sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bu bloqu silməkdə əminsiniz? User: <span class="text-primary" id="userInfo"></span>
                <input type="hidden" id="commentId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ləğv et</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="deleteComment">Sil</button>
            </div>
        </div>
    </div>
</div>

<!--Delete blog modal-->
<!-- Real Button trigger modal -->
<input type="hidden" id="blogModalActivate" data-bs-toggle="modal" data-bs-target="#BlogModal">
<!-- Modal -->
<div class="modal fade" id="BlogModal" tabindex="-1" aria-labelledby="BlogModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="BlogModalLabel">İstifadəçi sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bu bloqu silməkdə əminsiniz? User: <span class="text-primary" id="blogUserInfo"></span>
                <input type="hidden" id="blogId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ləğv et</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="deleteBlog">Sil</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script asp-append-version="true">
        "use strict";
        window.onload = () => {
            // For Deleting
            let modalBtns = document.querySelectorAll(".modalBtn");
            for (let modalBtn of modalBtns) {
                modalBtn.addEventListener("click", GetCommentId);
            }
            let BlogmodalBtn = document.querySelector("#blogModalBtn");
            BlogmodalBtn.addEventListener("click", GetBlogId);
            jQuery(document).on("click", "#deleteComment", function (e) {
                $.ajax({
                    method: "Post",
                    url: "https://localhost:44316/Admin/Comment/Delete/" + $("#commentId").val(),
                    success: function (res) {
                        if (res === "Success") {
                            $(".elToDelete").detach()
                        } else {
                            window.location.replace(window.location.href + "NotFound");
                        }
                    }
                });
            });
            jQuery(document).on("click", "#deleteBlog", function (e) {
                console.log("e")
                $.ajax({
                    method: "Post",
                    url: "https://localhost:44316/Admin/Blog/Delete/" + $("#blogId").val(),
                    success: function (res) {
                        if (res === "Success") {
                            window.location.replace("https://localhost:44316/Admin/Blog");
                        } else {
                            window.location.replace(window.location.href + "NotFound");
                        }
                    }
                });
            });
        }
        function GetCommentId(e) {
            let btn = e.target;
            let userName = btn.previousElementSibling.value;
            document.querySelector("#commentId").value = btn.previousElementSibling
                .previousElementSibling.value;
            document.getElementById("userInfo").textContent = userName;
            document.querySelector("#modalActivate").click();
            btn.closest(".userInfoEl").classList.add("elToDelete");
        }
        function GetBlogId(e) {
            let btn = e.target;
            let userName = btn.previousElementSibling.value;
            document.querySelector("#blogId").value = btn.previousElementSibling
                .previousElementSibling.value;
            document.getElementById("blogUserInfo").textContent = userName;
            document.querySelector("#blogModalActivate").click();
            btn.closest(".userInfoEl").classList.add("elToDelete");
        }
    </script>

}


