@model HeaderVM
@{
    Layout = null;
}

<div class="user-panel mt-3 pb-3 mb-3 d-flex">
    <div class="image">
        <img src="~/assets/img/@Model.Image" class="img-circle elevation-2" alt="User Image">
    </div>
    <div class="info">
        <a asp-controller="Home" asp-action="Index" class="d-block">@User.Identity.Name</a>
        <a class="text-danger" asp-controller="Account" asp-area="AuditServices" asp-action="Logout">Exit</a>
    </div>
</div>