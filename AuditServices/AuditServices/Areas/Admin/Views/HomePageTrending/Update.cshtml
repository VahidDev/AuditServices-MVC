@model HomePageTrendingSectionUpdateVM
@{
    ViewData["Title"] = "Update";
}

<!-- /.navbar -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Trendinq hissə</a></li>
                        <li class="breadcrumb-item active">Yenilə</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Yeniləmək formu</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form enctype="multipart/form-data" method="post" asp-action="Update">
                            <div class="card-body">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="form-group">
                                    <label asp-for="Title">Başlıq</label>
                                    <input type="text" asp-for="Title" class="form-control" value="@Model.Title" placeholder="Başlıq">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Tag">Tag</label>
                                    <input type="text" asp-for="Tag" class="form-control" value="@Model.Tag" placeholder="Tag">
                                    <span asp-validation-for="Tag" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description">Əsas yazı</label>
                                    <input type="text" asp-for="Description" class="form-control" value="@Model.Description" 
                                           placeholder="Əsas yazı">
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewImage">Yeni Şəkil</label>
                                    <input accept="image/*" type="file" asp-for="NewImage" class="form-control" placeholder="Yeni">
                                    <span asp-validation-for="NewImage" class="text-danger"></span>
                                </div>
                                <input type="hidden" value="@Model.Id" asp-for="Id" />
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Yenilə</button>
                                <a type="button" class="btn btn-danger" asp-action="Index">Ləğv et</a>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial">
}


