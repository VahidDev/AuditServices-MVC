<section id="breadcrumb-about" class="pos-rel">
    <div class="container">
        <div class="row flex-column align-items-around">
            <div class="mt-5 primary-bg page-location d-flex align-items-center">
                <i class="fs-2 white fas fa-home hover-cc"></i>
                <p class="fs-2 white hover-cc">Əlaqə</p>
            </div>
            <div class="breadcrumb--title fs-2 white fw-400">FA Consulting</div>
            <div class="breadcrumb--text white mt-5">
                Biznesdə daha irəlidə olun, bizi seçməklə sizdə gələcəyə irəliləyin
            </div>
        </div>
    </div>
</section>
<section id="form-contact" class="mt-5">
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5">
                <h1 class="text-center fs-3 contact-title">Bizə yazın</h1>
            </div>
        </div>
        <div class="row">
            <form action="#" class=" d-flex flex-wrap justify-content-between flex-column align-items-center flex-lg-row align-items-lg-start">
                <div class="input-group my-4 my-lg-0">
                    <label for="name">Adınız</label>
                    <input id="name" type="text" required>
                </div>
                <div class="input-group my-4 my-lg-0">
                    <label for="email">Email</label>
                    <input id="email" type="text" required>
                </div>
                <div class="input-group my-4 my-lg-0">
                    <label for="phone">Telefon</label>
                    <input id="phone" type="text" pattern="[0-9]{3}-[0-9]{3}-[0-9]{2}-[0-9]{2}" required>
                </div>
                <div class="col-12 pos-rel">
                    <textarea name="" id=""></textarea>
                    <div class="textarea-label">
                        Müraciətiniz
                    </div>
                </div>
                <div class="col-12 text-center mb-5">
                    <button type="submit" class="submit-btn ">Müraciət et</button>
                </div>
            </form>
        </div>
    </div>
  
</section>
