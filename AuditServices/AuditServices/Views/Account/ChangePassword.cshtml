@model UserChangePasswordVM
@{
    ViewData["Title"] = "ChangePassword";
}

<div class="customUpdateForm changePassword mb-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                <form class="form" asp-action="ChangePassword" method="post">
                    <div class="form-group">
                        <div class="form-group ">
                            <input asp-for="OldPassword"
                                   class="form-control"
                                   placeholder="Hal-hazırki şifrə" />
                            <span class="text-danger h2" asp-validation-for="OldPassword"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="NewPassword"
                                   class="form-control"
                                   placeholder="Yeni şifrə" />
                            <span class="text-danger h2" asp-validation-for="NewPassword"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword"
                                   class="form-control"
                                   placeholder="Şifrəni təsdiqlə" />
                            <span class="text-danger h2" asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>
                    <div class="form-btns d-flex justify-content-around">
                        <button type="submit" class="btn btn-primary w-25">Yenilə</button>
                        <a asp-controller="Account" asp-action="Index"
                                class="btn btn-danger w-25 ml-3">
                            Ləğv et
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}