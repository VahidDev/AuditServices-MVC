@model AccountLoginRegisterVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Qeydiyyat</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/assets/css/login.css" asp-append-version="true">
</head>
<body>
    <div class="audit-app">
        <section class="login">
            <div class="container">
                <div class="user signinBox">
                    <div class="imgBox"><img src="~/assets/img/audit-2.jpg" alt=""></div>
                    <div class="formBox">
                        <form asp-action="Login">
                            <h2>Giriş</h2>
                            <input type="text" placeholder="İstifadəçi adı" asp-for="AccountLoginViewModel.UserName">
                            <span asp-validation-for="AccountLoginViewModel.UserName" class="text-danger"></span>
                            <input type="password" placeholder="Şifrə" asp-for="AccountLoginViewModel.Password">
                            <div><span asp-validation-for="AccountLoginViewModel.Password" class="text-danger"></span></div>
                            <input type="submit" value="Giriş">
                            <p class="signup">Hesabınız yoxdur? O zaman <a onclick="toggleForm();">Qeydiyyatdan keçin</a></p>
                        </form>
                    </div>
                </div>
                <div class="user signupBox">
                    <div class="formBox">
                        <form enctype="multipart/form-data" asp-action="Register">
                            <h2>Hesab aç</h2>
                            <div class="text-danger my-4" asp-validation-summary="ModelOnly"></div>
                            <input type="text" placeholder="İstifadəçi Adınız" asp-for="AccountRegisterViewModel.UserName">
                            <div><span asp-validation-for="AccountRegisterViewModel.UserName" class="text-danger"></span></div>
                            <input type="email" placeholder="E-mail Adresiniz" asp-for="AccountRegisterViewModel.Email">
                            <div><span asp-validation-for="AccountRegisterViewModel.Email" class="text-danger"></span></div>
                            <input type="password" placeholder="Şifrə" asp-for="AccountRegisterViewModel.Password">
                            <div><span asp-validation-for="AccountRegisterViewModel.Password" class="text-danger"></span></div>
                            <input type="password" placeholder="Şifrə (təkrar)" asp-for="AccountRegisterViewModel.ConfirmPassword">
                            <div><span asp-validation-for="AccountRegisterViewModel.ConfirmPassword" class="text-danger"></span></div>
                            <div class="label"><label asp-for="AccountRegisterViewModel.Image">Profil şəkli <i class="fa-solid fa-images"></i></label></div>
                            <input type="file" accept="image/*"  asp-for="AccountRegisterViewModel.Image" style="display:none;">
                            <div><span asp-validation-for="AccountRegisterViewModel.Image" class="text-danger"></span></div>
                            <input type="submit" style="padding:0 !important;" value="Qeydiyyatdan keç">
                            <p class="signup">Giriş ekranına <a href="#" onclick="toggleForm();">geri qayıt</a></p>
                        </form>
                    </div>
                    <div class="imgBox"><img src="~/assets/img/audit-1.jpg" alt=""></div>
                </div>
            </div>
        </section>
    </div>
    <script asp-append-version="true">
        window.onload = () => {
            @if(Model?.AccountRegisterViewModel?.Message== "false")
            {
                <text>
            toggleForm();
                </text>
            }
        }
        function toggleForm() {
            section = document.querySelector('section');
            container = document.querySelector('.container');
            container.classList.toggle('active');
            section.classList.toggle('active');
        }
    </script>
    <!-- bootstrap js -->
    <script src="~/src/bootstrap.min.js"></script>
    <!--JQuery and Jquery validation scripts (as partial)-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
            integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
